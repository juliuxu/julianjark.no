{
  "name": "remix-template-remix",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "postinstall": "patch-package",
    "set-vercel-config": "cp remix.config.vercel.js remix.config.js",
    "set-default-config": "cp remix.config.default.js remix.config.js",
    "build-vercel": "npm-run-all set-vercel-config build:*",
    "build": "npm-run-all set-default-config build:*",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "dev": "run-p dev:*",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "remix dev",
    "generate:css": "npx tailwindcss -o ./app/tailwind.css",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@fontsource/source-sans-pro": "4.5.11",
    "@notionhq/client": "2.2.0",
    "@picocss/pico": "1.5.5",
    "@remix-run/node": "1.7.0",
    "@remix-run/react": "1.7.0",
    "@remix-run/serve": "1.7.0",
    "@remix-run/vercel": "1.7.0",
    "@tailwindcss/typography": "0.5.7",
    "@vercel/node": "2.5.14",
    "lru-cache": "7.14.0",
    "memoize-fs": "2.2.0",
    "prism-react-renderer": "1.3.5",
    "prismjs": "1.29.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "reveal.js": "4.3.1",
    "sharp": "0.31.0",
    "shiki": "0.11.1"
  },
  "devDependencies": {
    "@remix-run/dev": "1.7.0",
    "@remix-run/eslint-config": "1.7.0",
    "@types/react": "18.0.20",
    "@types/react-dom": "18.0.6",
    "@types/serialize-javascript": "5.0.2",
    "@types/sharp": "0.30.5",
    "eslint": "8.23.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "npm-run-all": "4.1.5",
    "patch-package": "6.4.7",
    "tailwindcss": "3.1.8",
    "typescript": "4.8.3"
  },
  "engines": {
    "node": ">=16"
  },
  "prettier": {
    "trailingComma": "all"
  }
}
